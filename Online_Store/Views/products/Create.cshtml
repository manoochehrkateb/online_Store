        function FillCity() {
            var stateId = $('#type').val();
            $.ajax({
                url: '/products/FillCity',
                type: "GET",
                dataType: "JSON",
                data: { type: stateId },
                success: function (cities) {
                    $("#catgorie").html(""); // clear before appending new list 
                    $.each(cities, function (i, cat) {
                        $("#catgorie").append(
                            $('<option></option>').val(cat.CatId).html(cat.CatName));
                    });
                }
            });
        }
